@model IEnumerable<Courses_MVC.Models.Receipt>

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.totalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.timeReceipt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.registerId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.totalPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.timeReceipt)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.registerId)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.receiptId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.receiptId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.receiptId">Delete</a>
    </td>
</tr>
}
    </tbody>
</table>
