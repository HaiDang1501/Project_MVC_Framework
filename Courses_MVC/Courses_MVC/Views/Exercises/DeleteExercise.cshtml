@model Courses_MVC.Models.Exercise

@{
    ViewData["Title"] = "Xóa bài luyện tập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="main">
    <div class="sidebar-admin">
        <partial name="_NavBar" />
    </div>
    <section class="section-add_course">
        <partial name="_AlertMessage" />
        <h1 class="text-center mt-3">Xóa bài luyện tập</h1>
        <div class="ml-5">
            <div>
                <h4>Bài tập</h4>
                <hr />
                <dl class="row">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.content)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.content)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.deadline)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.deadline)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Lesson.title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Lesson.title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.AppUser.UserName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.AppUser.UserName)
                        </dd>
                    </dl>
                </dl>
                <form asp-action="DeleteExercise">
                    <input type="hidden" asp-for="exerciseId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <div class="back-admin">
                        <a asp-action="ListExerciseAdmin">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
<script>
    const active_lienhe = document.querySelector('#active--baitap')
    active_lienhe.classList.add('active--css')
    /*document.querySelector('#active--khoahoc').classList.remove('active--css')*/
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
