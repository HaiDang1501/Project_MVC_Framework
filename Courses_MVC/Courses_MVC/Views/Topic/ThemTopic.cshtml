@model Courses_MVC.Models.Topic
@{
    ViewData["Title"] = "Thêm chủ đề";
}

<div class="main">
    <partial name="_NavBar" />
    <div class="col-md-8">
        <partial name="_AlertMessage" />
        <h2 class="contact-title text-center">Thêm liên hệ</h2>
        <form asp-action="ThemTopic" class="col-md-10 offset-md-2 mt-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="topicName" class="control-label"> </label>
                <input asp-for="topicName" class="form-control" />
                <span asp-validation-for="topicName" class="text-danger"></span>
            </div>
            <div class="form-row mb-4">
                <div class="form-group col-md-6">
                    <input type="submit" name="submit" value="Creat" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Trở về</a>
                </div>
            </div>

        </form>
    </div>
</div>
@{
    var summernote = new Courses_MVC.Models.Summernote("#content");

}
<partial name="_Summernote" model="summernote" />

<script>
    const active_lienhe = document.querySelector('#active--chude')

    active_lienhe.classList.add('active--css')
    document.querySelector('#active--khoahoc').classList.remove('active--css')
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
