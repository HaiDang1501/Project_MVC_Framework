@model Courses_MVC.Models.Contact

@{
    ViewData["Title"] = "Chi tiết liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main">
    <partial name="_NavBar" />
    <div class="col-md-8">
        <h2 class="contact-title text-center">Thông tin chi tiết khách hàng: @Model.HoTen</h2>
        <dl class="row offset-1 mt-5">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HoTen)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HoTen)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SDT)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SDT)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.content)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.time)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.time)
            </dd>
        </dl>
        <div>
            <a asp-action="Index" class="btn btn-secondary col-md-3 offset-1">Danh sách liên hệ</a>
        </div>
    </div>
</div>
<script>
    const active_lienhe = document.querySelector('#active--lienhe')

    active_lienhe.classList.add('active--css')
    document.querySelector('#active--khoahoc').classList.remove('active--css')
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




