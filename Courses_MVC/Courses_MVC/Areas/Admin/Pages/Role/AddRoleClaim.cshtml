@page "/admin/add-roleclaim/{roleid}"
@model Courses_MVC.Areas.Admin.Pages.Role.AddRoleClaimModel
@{
    ViewData["Title"] = "Gán đặc tính cho role";
}
<h2 class="text-center">@ViewData["Title"]: @Model.role.Name</h2>
<partial name="_StatusMessage" model="@Model.StatusMassage" />

<hr />
<div class="row offset-4 mt-3 mb-lg-5">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ClaimType" class="control-label"></label>
                <input asp-for="Input.ClaimType" class="form-control">
                <span asp-validation-for="Input.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ClaimValue" class="control-label"></label>
                <input asp-for="Input.ClaimValue" class="form-control">
                <span asp-validation-for="Input.ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Tạo mới" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a class="btn btn-success btn-block" asp-page="./Edit" asp-route-roleid="@Model.role.Id">Chỉnh sửa role</a>
                </div>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}